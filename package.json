{
  "name": "semoton",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend": "bun --cwd frontend",
    "backend": "bun --cwd backend",
    "dev": "concurrently \"bun frontend dev\" \"bun backend dev\"",
    "start": "concurrently \"bun frontend start\" \"bun backend start\"",
    "build": "bun frontend build",
    "lint": "concurrently \"bun frontend lint\" \"bun backend lint\""
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "typescript": "^5"
  }
}